<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".description_car" android:orientation="vertical"
                                             android:background="#80FF80">
    <View

            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_height="70dp"
            android:id="@+id/testata" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textStyle="bold"
            android:textAlignment="center" android:textColor="@color/colorAccent"
            android:id="@+id/txt_macchina" android:fontFamily="@font/carter_one"
            android:shadowDx="0" android:shadowDy="4" android:shadowRadius="4"
            android:shadowColor="@android:color/black"
            android:textSize="48sp"
            android:text="Aggiungi"
            app:layout_constraintEnd_toEndOf="@+id/testata" app:layout_constraintStart_toStartOf="@+id/testata"
            app:layout_constraintTop_toTopOf="@+id/testata" app:layout_constraintBottom_toBottomOf="@+id/testata"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline69"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.10670315"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline70"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.31"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/img_car"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline69"
            app:layout_constraintBottom_toTopOf="@+id/guideline70"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/img_car">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/model" android:layout_marginTop="8dp">
            <TextView
                    android:text="Modello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_model" android:layout_weight="1"
                    android:textColor="@android:color/black" android:textAlignment="center" android:textSize="18sp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    android:id="@+id/etxt_model" android:layout_weight="0" android:textAlignment="center"
                    android:enabled="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/owner" android:layout_marginTop="8dp">
            <TextView
                    android:text="Proprietario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_owner" android:layout_weight="1"
                    android:textColor="@android:color/black" android:textAlignment="center" android:textSize="18sp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    android:id="@+id/etxt_owner" android:layout_weight="0" android:textAlignment="center"
                    android:enabled="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/targa" android:layout_marginTop="8dp">
            <TextView
                    android:text="Targa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_targa" android:layout_weight="1"
                    android:textColor="@android:color/black" android:textAlignment="center" android:textSize="18sp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    android:id="@+id/etxt_targa" android:layout_weight="0" android:textAlignment="center"
                    android:enabled="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Bollo" android:layout_marginTop="8dp"
                android:gravity="center">
            <TextView
                    android:text="Bollo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_bollo" android:layout_weight="1"
                    android:textColor="@android:color/black" android:textAlignment="center" android:textSize="18sp"/>
            <TextView
                    android:layout_width="163dp"
                    android:layout_height="50dp"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/etxt_bollo" android:layout_weight="0" android:textAlignment="center"
                    android:gravity="center"/>
            <ImageView
                    android:src="@android:drawable/ic_menu_today"
                    android:layout_width="50dp"
                    android:layout_height="match_parent" android:id="@+id/img_calend_boll" android:layout_weight="0"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/RCA" android:layout_marginTop="8dp"
                android:gravity="center">
            <TextView
                    android:text="RCA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_rca" android:layout_weight="1"
                    android:textColor="@android:color/black" android:textAlignment="center" android:textSize="18sp"/>
            <TextView
                    android:layout_width="163dp"
                    android:layout_height="50dp"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/etxt_rca" android:layout_weight="0" android:textAlignment="center"
                    android:gravity="center"/>
            <ImageView
                    android:src="@android:drawable/ic_menu_today"
                    android:layout_width="50dp"
                    android:layout_height="match_parent" android:id="@+id/img_calend_rca" android:layout_weight="0"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Revisione" android:layout_marginTop="8dp"
                android:gravity="center">
            <TextView
                    android:text="Revisione"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_rev" android:layout_weight="1"
                    android:textColor="@android:color/black" android:textAlignment="center" android:textSize="18sp"/>
            <TextView
                    android:layout_width="163dp"
                    android:layout_height="50dp"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/etxt_rev" android:layout_weight="0" android:textAlignment="center"
                    android:gravity="center"/>
            <ImageView
                    android:src="@android:drawable/ic_menu_today"
                    android:layout_width="50dp"
                    android:layout_height="match_parent" android:id="@+id/img_calend_rev" android:layout_weight="0"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn">
            <Button
                    android:text="Elimina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_delete" android:layout_weight="1"
                    android:background="@drawable/rounded_btnreg" android:layout_margin="8dp"
                    android:textColor="@android:color/white" android:textStyle="bold" android:textSize="18sp"
                    android:shadowColor="@android:color/black" android:shadowDx="0" android:shadowDy="4"
                    android:shadowRadius="4"/>
            <Button
                    android:text="Modifica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_change" android:layout_weight="1"
                    android:background="@drawable/rounded_btnreg" android:layout_margin="8dp"
                    android:textColor="@android:color/white" android:textStyle="bold" android:textSize="18sp"
                    android:shadowColor="@android:color/black" android:shadowDx="0" android:shadowDy="4"
                    android:shadowRadius="4"/>
        </LinearLayout>
        <Button
                android:text="Indietro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_back"
                android:background="@drawable/rounded_btnreg" android:textSize="18sp"
                android:textColor="@android:color/white" android:shadowColor="@android:color/black"
                android:shadowDx="0" android:shadowDy="4" android:shadowRadius="4" android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>