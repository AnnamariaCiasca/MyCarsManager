<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".selectcar_addspesa"
                                             android:background="@color/colorPrimary">
    <View
            android:layout_width="wrap_content"
            android:layout_height="70dp" android:id="@+id/view4" android:background="@color/colorPrimaryDark"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Seleziona Auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_title"
            style="@style/TitleGrande"
            app:layout_constraintTop_toTopOf="@+id/view4"
            app:layout_constraintEnd_toEndOf="@+id/view4"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="@+id/view4"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/recyclercar_spese"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toTopOf="@+id/btn_indietro_spese" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view4" android:layout_marginBottom="8dp"/>
    <Button
            android:text="Indietro"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:id="@+id/btn_indietro_spese" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/btn_form"
            android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>