<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#80FF80"
        tools:context=".MainActivity">

    <!-- Testata -->
    <View
            android:id="@+id/testata"
            android:layout_width="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:layout_height="70dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Dashboard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textStyle="bold"
            android:textAlignment="center" android:textSize="48sp" android:textColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="@+id/testata"
            app:layout_constraintEnd_toEndOf="@+id/testata"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="@+id/testata"
            android:id="@+id/titolo" android:fontFamily="@font/bangers"
            android:shadowDx="0" android:shadowDy="4" android:shadowRadius="4"
            android:shadowColor="@android:color/black" app:layout_constraintHorizontal_bias="0.0"
    />
    <ImageView
            app:srcCompat="@drawable/accountvero"
            android:id="@+id/account"
            app:layout_constraintStart_toStartOf="@+id/mrg_lft1"
            app:layout_constraintTop_toTopOf="@+id/mrg_top1" app:layout_constraintBottom_toTopOf="@+id/mrg_bot1"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/mrg_rgt1"
    />

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mrg_lft1"
            app:layout_constraintGuide_percent="0.1"
            android:orientation="vertical"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mrg_rgt1"
            app:layout_constraintGuide_percent="0.35"
            android:orientation="vertical"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mrg_top1"
            app:layout_constraintGuide_percent="0.25"
            android:orientation="horizontal"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mrg_bot1"
            app:layout_constraintGuide_percent="0.39"
            android:orientation="horizontal"/>



</android.support.constraint.ConstraintLayout>