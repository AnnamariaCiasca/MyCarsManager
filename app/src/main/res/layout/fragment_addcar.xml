<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical"
              android:textAlignment="center" android:background="#80FF80" android:layout_weight="0"
              android:gravity="center|top">

    <View

            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_height="70dp"
            android:id="@+id/view"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center" android:textColor="@color/colorAccent"
            android:id="@+id/titolo12" android:fontFamily="@font/carter_one"
            android:shadowDx="0" android:shadowDy="4" android:shadowRadius="4"
            android:shadowColor="@android:color/black"
            android:textSize="48sp"
            android:text="Aggiungi" app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/testata12"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:gravity="center" android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_margin="8dp" android:id="@+id/model_layout"
                android:gravity="center">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_weight="1" android:textAlignment="center" android:id="@+id/etxt_model"
                    android:hint="Modello"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_margin="8dp" android:id="@+id/owner_layout"
                android:gravity="center">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:ems="10"
                    android:layout_weight="1" android:textAlignment="center" android:id="@+id/etxt_owner"
                    android:hint="Proprietario"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_margin="8dp" android:id="@+id/targa_layout"
                android:gravity="center">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:id="@+id/etxt_targa" android:layout_weight="1" android:textAlignment="center"
                    android:hint="Targa"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_margin="8dp" android:id="@+id/rca_layout"
                android:gravity="center">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:ems="10"
                    android:id="@+id/etxt_rca" android:layout_weight="1" android:textAlignment="center"
                    android:hint="Scadenza RCA"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_margin="8dp" android:id="@+id/bollo_layout"
                android:gravity="center">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:ems="10"
                    android:layout_weight="1" android:textAlignment="center" android:id="@+id/etxt_bollo"
                    android:hint="Scadenza Bollo"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_margin="8dp" android:id="@+id/rev_layout"
                android:gravity="center">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/etxt_rev" android:layout_weight="1" android:textAlignment="center"
                    android:hint="Ultima Revisione"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_margin="8dp" android:id="@+id/btn_layout"
                android:gravity="center">
            <Button
                    android:text="Annulla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_cancel" android:layout_weight="1"
                    android:textAlignment="center" android:layout_margin="8dp"
                    android:background="@drawable/rounded_btnreg" android:shadowColor="@android:color/black"
                    android:shadowDx="0" android:shadowDy="4" android:shadowRadius="4"
                    android:textColor="@android:color/white" android:textStyle="bold" android:textSize="18sp"/>
            <Button
                    android:text="Aggiungi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_add" android:layout_weight="1"
                    android:textAlignment="center" android:layout_margin="8dp"
                    android:background="@drawable/rounded_btnreg" android:shadowColor="@android:color/black"
                    android:shadowDx="0" android:shadowDy="4" android:shadowRadius="4"
                    android:textColor="@android:color/white" android:textStyle="bold" android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>