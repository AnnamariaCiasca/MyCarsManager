<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".login" android:background="#80FF80">
    <View
            android:id="@+id/testata11"
            android:layout_width="0dp"
            android:background="@color/colorPrimaryDark"
            android:layout_height="70dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center" android:textColor="@color/colorAccent"
            android:id="@+id/titolo10" android:fontFamily="@font/carter_one"
            android:shadowDx="0" android:shadowDy="4" android:shadowRadius="4"
            android:shadowColor="@android:color/black"
            android:textSize="48sp"
            android:text="Account"
            app:layout_constraintStart_toStartOf="@+id/testata11"
            app:layout_constraintTop_toTopOf="@+id/testata11" app:layout_constraintBottom_toBottomOf="@+id/testata11"
            app:layout_constraintEnd_toEndOf="@+id/testata11"/>
    <ImageView
            android:src="@drawable/menu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/menu2"
            app:layout_constraintBottom_toTopOf="@+id/guideline57" app:layout_constraintEnd_toStartOf="@+id/guideline54"
            app:layout_constraintTop_toTopOf="@+id/guideline56" app:layout_constraintStart_toStartOf="@+id/guideline55"
    />
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline54"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.14841849"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline55"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.02676399"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline56"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.01504788"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline57"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.08344733"/>
    <TextView
            android:text="Log-in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_log" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textColor="@android:color/black" android:fontFamily="@font/carter_one" android:textSize="30sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/titolo10"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etxt_mail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_log" android:background="@drawable/rounded_fieldtxt"
            android:textSize="24sp" android:hint="user@company.com" android:textAlignment="center"
            android:padding="8dp"/>
    <EditText
            android:id="@+id/etxt_pass"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etxt_mail"
            android:hint="Password" style="@style/field_blank"/>
    <Button
            android:text="Entra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/etxt_pass"
            android:background="@drawable/rounded_btnreg" android:textSize="24sp"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="Non sei ancora registrato? Fallo qui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_regist" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/btn_login"
            android:textColor="#444444" android:textStyle="bold" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:padding="16dp"/>
</android.support.constraint.ConstraintLayout>